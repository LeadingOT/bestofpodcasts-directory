---
interface Props {
  name: string;
  slug: string;
  tagline: string;
  category: string;
  host: string;
  rating?: number;
  tags: string[];
  frequency?: string;
}

const { name, slug, tagline, category, host, rating, tags, frequency } = Astro.props;
---

<a href={`/listing/${slug}`} class="block border border-gray-200 rounded-lg p-5 hover:shadow-md hover:border-blue-300 transition-all">
  <div class="flex items-start justify-between mb-2">
    <h3 class="text-lg font-semibold">{name}</h3>
    {frequency && (
      <span class="text-xs font-medium px-2 py-1 rounded-full bg-blue-100 text-blue-800">{frequency}</span>
    )}
  </div>
  <p class="text-sm text-gray-600 mb-2">{tagline}</p>
  <p class="text-xs text-gray-500 mb-3">Hosted by {host}</p>
  <div class="flex items-center gap-2 flex-wrap">
    <span class="text-xs bg-gray-100 text-gray-600 px-2 py-0.5 rounded">{category}</span>
    {rating && (
      <span class="text-xs text-yellow-600">â˜… {rating.toFixed(1)}</span>
    )}
  </div>
</a>
