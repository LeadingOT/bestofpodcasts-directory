---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = `Best Podcasts by Category 2026`;
const description = `Browse the best podcasts organized by category. Find exactly what you're looking for.`;

const categories = [
  {
    "name": "True Crime",
    "slug": "true-crime",
    "description": "Top true crime options"
  },
  {
    "name": "Comedy",
    "slug": "comedy",
    "description": "Top comedy options"
  },
  {
    "name": "Business",
    "slug": "business",
    "description": "Top business options"
  },
  {
    "name": "Technology",
    "slug": "technology",
    "description": "Top technology options"
  },
  {
    "name": "History",
    "slug": "history",
    "description": "Top history options"
  },
  {
    "name": "Science",
    "slug": "science",
    "description": "Top science options"
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
      {description}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {categories.map(cat => (
      <a 
        href={`/best/${cat.slug}`}
        class="p-6 bg-white border border-gray-200 rounded-lg hover:shadow-lg hover:border-blue-300 transition-all"
      >
        <h3 class="text-xl font-bold mb-2">{cat.name}</h3>
        <p class="text-gray-600 text-sm">{cat.description}</p>
      </a>
    ))}
  </div>
</BaseLayout>
